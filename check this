#include <bits/stdc++.h>
using namespace std;
class Dist{
   
    private:
    int m,cm;
    public:
     Dist(){
         m=0;
         cm=0;
     }
    void input()
     {
        cout<<"enter value in meter and centemeter : "<<endl;
        cin>>m>>cm;
     }
    void add(Dist a,Dist b)
     {

     
         m=a.m+b.m;
            cm=a.cm+b.cm;
         return ;
     }
    void display()
     {
         cout<<"valur of m : "<<m<<endl;
         cout<<"value of cn : "<<cm;
     }
};


int main()
{
  
  Dist obj1,obj2,obj3;
    obj1.input();
    obj2.input();
    obj3.add(obj2,obj1);
    obj3.display();
}
